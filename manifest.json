{
  "name": "SONN Mail Template",
  "description": "E-Mail Formatvorlage beim Schreiben einer E-Mail",
  "author": "SONN",
  "version": "1.2.0",
  "applications": {
    "gecko": {
      "id": "MailTemplate@SONN",
      "strict_min_version": "128.0"
    }
  },
  "permissions": [
    "compose",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "LegacyPrefs": {
      "schema": "api/legacyPrefs.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "api/legacyPrefs.js"
      }
    }
  },
  "manifest_version": 2
}
